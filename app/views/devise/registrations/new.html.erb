
<section id="intro" class="intro">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  <div class="signup">
    <p>
      <div class="field">
      <b>Email </b> <br>
      <%= f.email_field :email, autofocus: true, class: 'navbar-signup-form' %>
      </div>
    <br>
    <br>
    </p>
    <p>
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'navbar-signup-form' %>
      </div>
    <br>
    <br>
    </p>
    <p>
      <div class="field">
      <b>Password Confirmation</b><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'navbar-signup-form' %>
      </div>
    <br>
    <br>
    </p>
    <p>
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-skin scroll" %>
      </div>
      <% end %>
      <br>
      <%= link_to (image_tag "facebooksignup.png"), '/users/auth/facebook' %>

  </div>
</section>